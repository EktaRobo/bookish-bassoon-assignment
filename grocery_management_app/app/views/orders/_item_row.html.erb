<div class="well">

  <div class="row">
    <div class="col-xs-4">
      <h4><%= item.name %></small></h4>
    </div>
    <div class="col-xs-4">
      <div class="circle"> <%= image_tag item.image.url(:thumb) %> </div>
    </div>
    <div class="col-xs-4">

      <h4 class="text-right">Unit Price: <span style="color: green"><%= number_to_currency item.price_per_unit %></span></h4>
        <div class="input-group">
          <p><%= cart.quantity %> <p>
        </div>
        <% if current_user.user_type == "Client" && order.order_status_id == 1%>
            <%id = cart.id%>
          <div >
             <% link_to 'Edit', '/carts/id', :method => :put, class: "btn btn-primary" %>
             <!-- <button class="btn btn-primary" id="edit">Edit</button> -->
              <%= link_to 'Edit', edit_cart_path(cart), class: "btn btn-primary" %>
          </div>
          <div >
              <%= link_to 'Delete', {:controller => "carts", :action => "destroy", :cart => cart, :id => cart.id }, :method => :delete, class: "btn btn-danger" %>
          </div>
        <% end -%>
    </div>

  </div>
</div>
