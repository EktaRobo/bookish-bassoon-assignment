<%= form_for item, html: { multipart: true } do |f| %>
  <% if item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
      <% item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <div class="row">
      <div class="field col-md-3">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control col-md-6" %>
      </div>

      <div class="field col-md-3">
        <%= f.label :price_per_unit %>
        <%= f.text_field :price_per_unit, class: "form-control col-md-6"  %>
      </div>

      <div class="field col-md-3">
        <%= f.label :unit %>
        <%= f.text_field :unit, class: "form-control col-md-6"  %>
      </div>

      <div class="field col-md-3">
        <%= f.label :units_in_stock %>
        <%= f.number_field :units_in_stock, class: "form-control col-md-6"  %>
      </div>
   </div>
   <br/>
    <div class="field col-centered">
      <%= f.label :image %>
      <%= f.file_field :image %>
    </div>
  <br/>
    <div class="actions">
      <%= f.submit "Add Item", class: "btn btn-primary col-centered" %>
    </div>
<% end %>
